{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/admin/*",
      "allowedRoles": ["administrator"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/css/*",
      "/js/*",
      "/images/*",
      "/favicon.ico",
      "*.{jpg,png,gif,svg,woff,woff2,ttf,eot}"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/signin.html",
      "statusCode": 302
    },
    "403": {
      "redirect": "/signin.html",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "mimeTypes": {
    ".woff2": "font/woff2",
    ".woff": "font/woff",
    ".ttf": "font/ttf"
  }
}
