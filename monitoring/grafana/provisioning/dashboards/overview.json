  "links": [],
  "panels": [
    {
      "title": "API Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"fastapi\"}[5m])",
          "legendFormat": "{{method}} {{handler}}"
        }
      ]
    },
    {
      "title": "API Response Latency (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"fastapi\"}[5m]))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "title": "Active WebSocket Connections",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "websocket_connections_active{job=\"fastapi\"}",
          "legendFormat": "connections"
        }
      ]
    },
    {
      "title": "Kafka Consumer Lag",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "kafka_consumer_group_lag{group=\"playbyplay-stream-processor\"}",
          "legendFormat": "{{topic}} - {{partition}}"
        }
      ]
    },
    {
      "title": "PostgreSQL Active Connections",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "pg_stat_activity_count{job=\"postgres\"}",
          "legendFormat": "connections"
        }
      ]
    },
    {
      "title": "Redis Memory Usage",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes{job=\"redis\"}",
          "legendFormat": "used"
        }
      ]
    },
    {
      "title": "Ingestion Poll Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "rate(espn_polls_total{job=\"fastapi\"}[5m])",
          "legendFormat": "{{collector}}"
        }
      ]
    }
  ],
