# Lunara.io Frontend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:3000/api

# ============================================
# Firebase Configuration
# ============================================
# Firebase API Key
VITE_FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth Domain
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your_project_id_here

# Application ID (for Firestore paths: artifacts/{APP_ID}/public/data/messages)
VITE_APP_ID=lunara-default

# Initial Auth Token (optional - falls back to anonymous sign-in if not provided)
# Set via window.__initial_auth_token in production

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false

# ============================================
# Error Tracking (Sentry)
# ============================================
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
# Enable Sentry in development (default: false)
VITE_SENTRY_DEV=false

# ============================================
# Analytics
# ============================================
VITE_GA_TRACKING_ID=

# ============================================
# Environment
# ============================================
VITE_ENV=development
